{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                ".."
            ],
        },
        {
            "label": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [

            ],
        },
        {
            "type": "shell",
            "label": "protoc",
            "command": "protoc",
            "args": [
                "--proto_path=${workspaceFolder}/proto",
                "-I=${workspaceFolder}/protoc-30.2/include",
                "--cpp_out=${workspaceFolder}/proto_out",
                "./proto/*.proto"
            ]
        },
        {
            "label": "Build",
            "dependsOn":[
                "cmake",
                "make",
                "protoc"
            ]
        }
    ],

}